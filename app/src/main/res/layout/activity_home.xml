<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <!-- ================= MAIN CONTENT ================= -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_placeholder_space">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- ðŸŒŒ HERO IMAGE -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="560dp">

                    <ImageView
                        android:id="@+id/imgApod"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/abcd"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_overlay"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="24dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Explore Things\nBeyond Earth"
                            android:textColor="@android:color/white"
                            android:textSize="34sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Astronomical Picture of the Day"
                            android:textColor="@color/card_text_secondary"
                            android:textSize="14sp"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>

                    <!-- ðŸ‘‰ LET'S GO CTA -->
                    <LinearLayout
                        android:id="@+id/ctaLetsGo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|start"
                        android:layout_marginStart="24dp"
                        android:layout_marginBottom="32dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackgroundBorderless">

                        <!-- Circle Arrow -->
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_arrow_right"
                            android:padding="12dp"
                            android:background="@drawable/bg_circle_outline"
                            app:tint="@android:color/white" />

                        <!-- LET'S GO text -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LETâ€™S GO!"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginStart="12dp" />
                    </LinearLayout>
                </FrameLayout>

                <!-- ðŸ”½ CONTENT -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- ðŸ–¼ï¸ SPACE GALLERY -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardGallery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp"
                            android:background="@color/card_background"
                            android:foreground="@drawable/bg_card_ripple">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ–¼ï¸ Space Gallery"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/card_text_primary"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Browse stunning NASA images"
                                android:textSize="13sp"
                                android:textColor="@color/card_text_secondary"
                                android:layout_marginTop="4dp"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <!-- ðŸ“… UPCOMING EVENTS -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardEvents"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp"
                        app:cardUseCompatPadding="true">

                        <!-- Content + Ripple -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp"
                            android:background="@color/card_background"
                            android:foreground="@drawable/bg_card_ripple">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ“… Upcoming Astronomical Events"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/card_text_primary"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Meteor showers / celestial events"
                                android:textSize="13sp"
                                android:textColor="@color/card_text_secondary"
                                android:layout_marginTop="4dp"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <!-- â˜„ï¸ NEAR EARTH OBJECTS -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardNeoWs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp"
                            android:background="@color/card_background"
                            android:foreground="@drawable/bg_card_ripple">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â˜„ï¸ Near-Earth Objects"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/card_text_primary"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Track potentially hazardous asteroids"
                                android:textSize="13sp"
                                android:textColor="@color/card_text_secondary"
                                android:layout_marginTop="4dp"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>



                    <!-- ðŸš€ SPACE NEWS -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardNews"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp"
                            android:background="@color/card_background"
                            android:foreground="@drawable/bg_card_ripple">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸš€ Space News"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/card_text_primary"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Latest discoveries / missions"
                                android:textSize="13sp"
                                android:textColor="@color/card_text_secondary"
                                android:layout_marginTop="4dp"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <!-- â˜° MENU BUTTON -->
        <ImageButton
            android:id="@+id/btnMenu"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_menu"
            app:tint="@android:color/white"
            android:layout_gravity="top|start"/>
    </FrameLayout>

    <!-- ================= DRAWER ================= -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu"/>

</androidx.drawerlayout.widget.DrawerLayout>
