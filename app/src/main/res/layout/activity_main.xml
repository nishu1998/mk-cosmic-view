<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/button_gradient"
        android:text=" About Us"
        android:textColorLink="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnApod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Astronomy Picture of the Day"
        android:background="@drawable/button_gradient"

        app:layout_constraintTop_toBottomOf="@id/btnAbout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/btnMarsRoverPhotos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mars Rover Photos"
        android:background="@drawable/button_gradient"

        app:layout_constraintTop_toBottomOf="@id/btnApod"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/btnNeoWs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NeoWs (Asteroids)"
        android:background="@drawable/button_gradient"

        app:layout_constraintTop_toBottomOf="@id/btnMarsRoverPhotos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_margin="16dp" />

    <Button
        android:id="@+id/btnEpic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EPIC Images"
        android:background="@drawable/button_gradient"
        app:layout_constraintTop_toBottomOf="@id/btnNeoWs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_margin="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>