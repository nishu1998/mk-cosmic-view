<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/card_background"
        android:padding="16dp">

        <!-- â˜„ï¸ Asteroid Name -->
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asteroid Name"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/card_text_primary"/>

        <!-- âš ï¸ Hazard Badge -->
        <TextView
            android:id="@+id/tvHazardous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:text="Potentially Hazardous"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_hazard_badge"/>

        <!-- ðŸ“Š Details Section -->
        <TextView
            android:id="@+id/tvMagnitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Magnitude: 22.1"
            android:textSize="14sp"
            android:textColor="@color/card_text_secondary"/>

        <TextView
            android:id="@+id/tvDiameter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Diameter: 1.2 km"
            android:textSize="14sp"
            android:textColor="@color/card_text_secondary"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
