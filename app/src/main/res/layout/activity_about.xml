<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#0B0F2B">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- App Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MK Cosmic View"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explore the universe, one moment at a time."
            android:textSize="14sp"
            android:textColor="#B0B3FF"
            android:layout_marginTop="6dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#2A2F6B"
            android:layout_marginVertical="16dp" />

        <!-- About App -->
        <TextView
            android:text="About the App"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MK Cosmic View is a space exploration app designed for astronomy enthusiasts. It brings together stunning space imagery, upcoming celestial events, and curated astronomical content in a simple and visually engaging experience."
            android:textColor="#D1D3FF"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

        <!-- Data Sources -->
        <TextView
            android:text="Data Sources"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• NASA Image and Video Library\n• Public astronomical calendars and verified astronomy sources"
            android:textColor="#D1D3FF"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

        <!-- Tech Stack -->
        <TextView
            android:text="Technology"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Kotlin\n• MVVM Architecture\n• Retrofit &amp; Coroutines\n• ViewBinding\n• Material Design"
            android:textColor="#D1D3FF"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

        <!-- Developer -->
        <TextView
            android:text="Developer"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Developed by Nishant Gautam.\nAndroid Developer focused on building clean, scalable, and user-friendly mobile applications."
            android:textColor="#D1D3FF"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>
